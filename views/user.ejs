<% layout('layout') -%>
  <div class="container">
<div class="page-header">
    <h1>User <small><%= user.name %></small></h1>
</div>
<form class="bs-example" role="form" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" value="<%= user.name %>" disabled>
    </div>
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" value="<%= user.email %>" disabled>
    </div>
    <div class="form-group">
        <label for="bio">Bio</label>
        <!--<textarea id="bio" name="bio" class="form-control" rows="3"><%= user.bio %></textarea>-->
        <input type="text" class="form-control" id="bio" name="bio" placeholder="Enter bio" value="<%= user.bio %>" >
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-default">Submit</button>
            <a class="btn btn-primary" href="/logout">Sign Out</a>
        </div>
    </div>
</form>
</div>